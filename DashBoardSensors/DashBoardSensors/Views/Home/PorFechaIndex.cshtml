@model DashBoardSensors.Models.DeviceDataResponse

<h1>Sensor Data</h1>

@if (Model != null && Model.DeviceData != null)
{
    <div>
        @foreach (var data in Model.DeviceData)
        {
            <h2>Parameter Code: @data.ParameterCode</h2>
            <p>Parameter Name: @data.ParameterName</p>
            <p>Parameter Unit: @data.ParameterUnit</p>
            <p>Parameter Abbreviation: @data.ParameterAbbreviation</p>

            <h3>Values</h3>
            <ul>
                <li>Average: @data.Values.AvgData?.FirstOrDefault()</li>
                <li>Minimum: @data.Values.MinData?.FirstOrDefault()</li>
                <li>Maximum: @data.Values.MaxData?.FirstOrDefault()</li>
            </ul>
        }
    </div>
}
else if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}
